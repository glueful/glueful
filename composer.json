{
    "name": "glueful/glueful",
    "type": "library",
    "keywords": [
        "api",
        "framework",
        "php",
        "rest",
        "jwt",
        "database",
        "cache",
        "queue"
    ],
    "homepage": "https://github.com/glueful/glueful",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tawiah Sowah",
            "email": "michaeltawiahsowah@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/glueful/glueful/issues",
        "source": "https://github.com/glueful/glueful",
        "docs": "https://github.com/glueful/glueful/wiki"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/glueful"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "files": [
            "api/helpers.php",
            "api/Exceptions/ExceptionHandler.php"
        ],
        "psr-4": {
            "Glueful\\": "api/",
            "Glueful\\Database\\": [
                "api/Database/",
                "api/Database/Driver/"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "aws/aws-sdk-php": "^3.339",
        "phpmailer/phpmailer": "^6.9",
        "monolog/monolog": "^3.8",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "dragonmantank/cron-expression": "^3.4",
        "symfony/routing": "^7.2",
        "symfony/http-foundation": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    }
}
