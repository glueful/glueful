# Application Settings
APP_ENV=development
APP_DEBUG=true
DEV_MODE=false
API_VERSION=1.0.0
API_TITLE="MAPI Documentation"
API_DOCS_ENABLED=true

#status
ACTIVE_STATUS=active
DELETED_STATUS=deleted

# Feature Flags
ENABLE_PERMISSIONS=true
ENABLE_AUDIT=false
API_DEBUG_MODE=true
API_LOCAL_MODE=true
FORCE_ADVANCED_EMAIL=true
ENABLE_API_FIELD_ENCRYPTION=false

# Security
JWT_SECRET=your-jwt-secret-here
JWT_DEFAULT_EXPIRATION=3600
JWT_REMEMBER_EXPIRATION=2592000
DEFAULT_SECURITY_LEVEL=1

# URLs
API_BASE_URL=http://your-api-url/
CDN_BASE_URL=http://your-cdn-url/
WEBSITE_DOMAIN=http://your-domain/

# Database
DB_ENGINE=MYSQL
DB_CONNECTION=primary
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Cache
CACHE_ENGINE=4
MEMCACHE_KEY_SEED=your_memcache_key_seed
LIST_LIMIT=200

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=tls
SMTP_PORT=587
BCC_EMAILS=

# Brevo (Sendinblue)
BREVO_API_KEY=your_brevo_api_key

# Firebase Cloud Messaging
FCM_PROJECT_ID=your_fcm_project_id
FCM_ACCESS_TOKEN=your_fcm_access_token

# Queue Configuration
QUEUE_SERVER=127.0.0.1
PP_QUEUE=pp_sync

# Role IDs
ADMIN_ROLE_ID=1
USER_ROLE_ID=2

# Logging
API_DEBUG_LOGGING=true
LOG_FILE=api_debug_
