# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/mapi
APP_NAME="MAPI"
DEV_MODE=false
API_VERSION=1.0.0
API_TITLE="MAPI Documentation"
API_DOCS_ENABLED=true

#status
ACTIVE_STATUS=active
DELETED_STATUS=deleted

# Feature Flags
ENABLE_PERMISSIONS=true
ENABLE_AUDIT=false
API_DEBUG_MODE=true
API_LOCAL_MODE=true
FORCE_ADVANCED_EMAIL=true
ENABLE_API_FIELD_ENCRYPTION=false

# Security
JWT_SECRET=change-this-to-secure-secret
JWT_DEFAULT_EXPIRATION=3600
JWT_REMEMBER_EXPIRATION=2592000
DEFAULT_SECURITY_LEVEL=2

# URLs
API_BASE_URL=http://localhost/mapi/api/
CDN_BASE_URL=http://localhost/cdn/
WEBSITE_DOMAIN=http://localhost/mapi/

# Database
DB_ENGINE=MYSQL
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=mapi_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Cache
CACHE_ENGINE=4
MEMCACHE_KEY_SEED=your_memcache_key_seed
LIST_LIMIT=200

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=mapi_
CACHE_TTL=3600
CACHE_KEY_PREFIX=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_DB=1

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211
MEMCACHED_PERSISTENT_ID=
MEMCACHED_USERNAME=
MEMCACHED_PASSWORD=
MEMCACHED_WEIGHT=100

# Email Configuration
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Mapi System"
SMTP_HOST=your_smtp_host
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_PORT=587
SMTP_SECURE=tls
USE_SMTP=true
SMTP_AUTH=true
FORCE_ADVANCED_EMAIL=true
BCC_EMAILS=

# Brevo (Sendinblue)
BREVO_API_KEY=your_brevo_api_key

# Firebase Cloud Messaging
FCM_PROJECT_ID=your_project_id
FCM_ACCESS_TOKEN=your_access_token

# Queue Configuration
QUEUE_SERVER=127.0.0.1
PP_QUEUE=pp_sync

# Role IDs
ADMIN_ROLE_ID=1
USER_ROLE_ID=2

# Logging
API_DEBUG_LOGGING=true
LOG_FILE=api_debug_

# API Settings
API_RATE_LIMIT=100

# JWT Configuration
JWT_EXPIRATION=3600
JWT_REFRESH_TTL=7200

# File Storage
STORAGE_DRIVER=local
STORAGE_PATH=/storage/app
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=/logs

# Meillesearch Configuration
MLLS_CLIENT_HOST=http://your-search-domain.com/
MLLS_CLIENT_KEY=your_master_key
MLLS_PP_INDEX=parps

# Public Token
PUBLIC_TOKEN=change-this-to-secure-public-token

# Paths
WEBSITE_BASE_DIRECTORY=/path/to/your/mapi/
UPLOADS_DIRECTORY=/path/to/your/cdn/

# Storage Configuration
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1
S3_BUCKET=
S3_ENDPOINT=

# Token Settings
ACCESS_TOKEN_LIFETIME=900
REFRESH_TOKEN_LIFETIME=604800
TOKEN_SALT=change_this_to_a_secure_salt
JWT_KEY=change_this_to_a_secure_key
JWT_ALGORITHM=HS256

PAGINATION_DEFAULT_SIZE=25
PAGINATION_MAX_SIZE=100
PAGINATION_ENABLED=true