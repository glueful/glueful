# Application Settings
APP_NAME="Glueful"
APP_ENV=development
APP_DEBUG=true
DEV_MODE=false
API_VERSION=1.0.0
API_TITLE="Glueful Documentation"
API_DOCS_ENABLED=true
API_BASE_URL=http://localhost/glueful/api/
WEBSITE_DOMAIN=http://localhost/glueful/

# Security
ACCESS_TOKEN_LIFETIME=900  # 15 minutes
REFRESH_TOKEN_LIFETIME=604800  # 7 days
DEFAULT_SECURITY_LEVEL=1
TOKEN_SALT=your-secure-salt-here
JWT_KEY=your-secure-jwt-key-here
JWT_ALGORITHM=HS256

# Database
DEFAULT_DATABASE_CONNECTION_INDEX=primary
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_DB=1

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=glueful_
CACHE_TTL=3600

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_PREFIX=glueful_
QUEUE_RETRY_AFTER=90

# Email Configuration
USE_SMTP=true
SMTP_HOST=your_smtp_host
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=tls
SMTP_PORT=587
BCC_EMAILS=
MAIL_FROM_ADDRESS=no-reply@yourdomain.com
MAIL_FROM_NAME=Glueful

# AWS S3 Configuration
S3_ACCESS_KEY_ID=your_s3_key_id
S3_SECRET_ACCESS_KEY=your_s3_secret
S3_REGION=your_s3_region
S3_BUCKET=your_s3_bucket
S3_ENDPOINT=your_s3_endpoint

# Storage Configuration
STORAGE_DRIVER=local
FILESYSTEM_DISK=local
STORAGE_PATH=storage/app
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_PATH=storage/logs
API_DEBUG_LOGGING=true
LOG_FILE=api_debug_

# Feature Flags
ENABLE_PERMISSIONS=true
ENABLE_AUDIT=false
API_DEBUG_MODE=true
API_LOCAL_MODE=true
FORCE_ADVANCED_EMAIL=true
ENABLE_API_FIELD_ENCRYPTION=false

# Pagination Settings
PAGINATION_DEFAULT_SIZE=25
PAGINATION_MAX_SIZE=100
PAGINATION_ENABLED=true
LIST_LIMIT=200

# System Status
ACTIVE_STATUS=active
DELETED_STATUS=deleted