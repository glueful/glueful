# Application Settings
APP_NAME="Glueful"
APP_ENV=development
# Note: Framework automatically sets APP_DEBUG=false when APP_ENV=production
APP_DEBUG=true
BASE_URL=http://localhost/glueful
API_BASE_URL=http://localhost/glueful/api/
API_VERSION=v1
API_VERSION_FULL=1.0.0
# Note: Framework automatically disables API docs when APP_ENV=production for security
API_DOCS_ENABLED=true

# Security Keys - IMPORTANT: Generate secure keys before production!
# Use: php glueful generate:key to create secure keys automatically
APP_KEY=generate-secure-32-char-key-here
JWT_KEY=your-secure-jwt-key-here
ACCESS_TOKEN_LIFETIME=900  # 15 minutes
REFRESH_TOKEN_LIFETIME=604800  # 7 days
# Note: Framework uses stricter security levels automatically in production
DEFAULT_SECURITY_LEVEL=1
TOKEN_SALT=your-secure-salt-here
JWT_ALGORITHM=HS256

# CORS Configuration
# Development: * allows all origins for easy testing
# Production: Framework will warn if using * and suggest specific domains
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173,http://localhost:8080

# Security Headers (Production-ready defaults included)
# Disable CSP to avoid middleware conflicts
CSP_HEADER=""
HSTS_HEADER="max-age=31536000; includeSubDomains"

# Production Security Settings
# Note: Framework automatically enables HTTPS enforcement in production
FORCE_HTTPS=false
# Note: Framework automatically uses 'error' log level in production
LOG_LEVEL=debug

# Rate Limiting
# Note: Framework automatically uses stricter rate limits in production
# Uncomment to override automatic defaults:
# IP_RATE_LIMIT_MAX=60        # Dev: 60/min, Prod: 30/min (auto)
# USER_RATE_LIMIT_MAX=1000    # Dev: 1000/hour, Prod: 500/hour (auto)  
# ENDPOINT_RATE_LIMIT_MAX=30  # Dev: 30/min, Prod: 15/min (auto)

# Security Validation Warnings
# Set to true to disable security guidance (not recommended)
DISABLE_SECURITY_WARNINGS=false
DISABLE_PRODUCTION_WARNINGS=false
SUPPRESS_SECURITY_WARNINGS=false

# Request Validation
MAX_REQUEST_SIZE=10MB
REQUIRE_USER_AGENT=false
BLOCK_SUSPICIOUS_UA=false

# Database - SQLite (no setup required)
DB_DRIVER=sqlite
# Use absolute path or relative to project root (resolved in config/database.php)
DB_SQLITE_DATABASE=storage/database/glueful.sqlite
DB_POOLING_ENABLED=false

# MySQL Configuration (uncomment to use MySQL instead of SQLite)
# DB_DRIVER=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_MYSQL_ROLE=primary

# PostgreSQL Configuration (uncomment to use PostgreSQL instead of SQLite)
# DB_DRIVER=pgsql
# DB_PGSQL_HOST=localhost
# DB_PGSQL_PORT=5432
# DB_PGSQL_DATABASE=your_database_name
# DB_PGSQL_USERNAME=your_database_user
# DB_PGSQL_PASSWORD=your_database_password
# DB_PGSQL_SCHEMA=public
# DB_PGSQL_SSL_MODE=prefer

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_DB=1

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=glueful_
CACHE_TTL=3600

# Queue Configuration
QUEUE_CONNECTION=database
QUEUE_PREFIX=glueful_
QUEUE_RETRY_AFTER=90

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=your_smtp_host
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_SECURE=tls
MAIL_PORT=587
MAIL_BCC=
MAIL_FROM=no-reply@yourdomain.com
MAIL_FROM_NAME=Glueful
MAIL_LOGO_URL=https://yourdomain.com/logo.png

# AWS S3 Configuration
S3_ACCESS_KEY_ID=your_s3_key_id
S3_SECRET_ACCESS_KEY=your_s3_secret
S3_REGION=your_s3_region
S3_BUCKET=your_s3_bucket
S3_ENDPOINT=your_s3_endpoint

# Storage Configuration
STORAGE_DRIVER=local
FILESYSTEM_DISK=local
STORAGE_PATH=storage/app
MAX_UPLOAD_SIZE=10485760

# Logging Configuration

# Framework Logging (Infrastructure/Protocol concerns)
FRAMEWORK_LOGGING_ENABLED=true
FRAMEWORK_LOG_LEVEL=info
FRAMEWORK_LOG_CHANNEL=framework
LOG_FRAMEWORK_EXCEPTIONS=true
LOG_FRAMEWORK_DEPRECATIONS=true
LOG_FRAMEWORK_LIFECYCLE=true
LOG_FRAMEWORK_PROTOCOL_ERRORS=true

# Framework Performance Monitoring (Optional Features)
LOG_SLOW_REQUESTS=true
SLOW_REQUEST_THRESHOLD=1000
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=200
LOG_HTTP_CLIENT_FAILURES=true
HTTP_CLIENT_SLOW_THRESHOLD=5000

# Application Logging (Business Logic - Developer Configured)
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_PATH=storage/logs
LOG_TO_FILE=true
LOG_TO_DB=true
LOG_ROTATION_DAYS=30
API_DEBUG_LOGGING=true
LOG_FILE=api_debug_

# Feature Flags & Debugging
API_DEBUG=true  # Enables logging, debugging, and docs in dev mode
ENABLE_PERMISSIONS=true
FORCE_ADVANCED_EMAIL=true
# Other feature flags
ENABLE_AUDIT=false
API_DEBUG_MODE=true
API_LOCAL_MODE=true
ENABLE_API_FIELD_ENCRYPTION=false

# Pagination Settings
#PAGINATION_ENABLED=true
#PAGINATION_DEFAULT_SIZE=25
#PAGINATION_MAX=100
#PAGINATION_LIST_LIMIT=200

# System Status
ACTIVE_STATUS=active
DELETED_STATUS=deleted

NANOID_LENGTH=12